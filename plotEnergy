#set output 'data/radial.png'


set style line 1 lc rgb '#0060ad' lt 1 lw 1.5
set style line 2 lc rgb '#09ad00' lt 1 lw 1.5
set style line 3 lc rgb '#00ad88' lt 1 lw 1.5
set grid
plot filename using 1:2 with linespoints title 'Potential Energy', \
     filename using 1:3 with linespoints title 'Kinetic Energy', \
     filename using 1:4 with linespoints title 'Total Energy'
pause -1 "Hit return to continue"

